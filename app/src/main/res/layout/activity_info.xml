<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <RelativeLayout
        android:id="@+id/RelativeLayoutVertical1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_main_one" >

        <LinearLayout
            android:id="@+id/LinearLayoutVertical1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:gravity="center" >

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:text="Meal Card Authentication"
                android:textAlignment="center"
                android:textSize="40sp"
                android:textStyle="bold"
                android:fontFamily="@font/berlin_sans_fb_demi"
                android:textColor="@color/dark_blue" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="-20dp"
                android:text="One ID Digital Authentication for Cafe Meal Card â€“ Powered by EITM School of Computing"
                android:textAlignment="center"
                android:textSize="20sp"
                android:fontFamily="@font/arial"
                android:textColor="@color/dark_blue" />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/LinearLayoutVertical2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:padding="20dp"
            android:orientation="vertical"
            android:gravity="bottom" >

            <Button
                android:id="@+id/btn_back"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:text="Go Back"
                android:textColor="#FFFFFF"
                android:fontFamily="@font/arial"
                android:backgroundTint="@color/dark_blue" />

        </LinearLayout>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>